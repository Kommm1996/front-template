<%- include('./layout/header.ejs',{title: index_list[1].title }) %>
<main class="overflow-hidden">
  <div
    class="flex min-h-screen flex-wrap items-center justify-center py-20 text-center"
  >
    <div class="w">
      <div class="mx-auto max-w-[31.25rem] shadow">
        <figure class="aspect-[4/3]">
          <img src="/src/img/img_template.jpg" alt="" class="obj-cover" />
        </figure>
      </div>
      <div class="title-xl mt-20">
        <h1>Hello World</h1>
      </div>
      <div class="mt-1 flex items-center justify-center text-sec-text">
        <span>From src</span>
        <i class="bi bi-chevron-double-right"></i>
        <span>ejs</span>
        <i class="bi bi-chevron-double-right"></i>
        <span>home.ejs</span>
      </div>
      <div class="my-20">
        <div class="swiper home-banner-swiper">
          <div class="swiper-wrapper">
            <% for( let i = 0; i < 5; i++ ) { %>
            <div class="swiper-slide">
              <div class="h-[500px] bg-main"></div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="my-20">
        <div
          class="grid grid-cols-3 justify-center gap-40"
          id="countUpTrigger-0"
        >
          <% for( let i = 0; i < 3; i++ ) { %>
          <div class="title-xl countUpTrigger-0-item" data-num="1000"></div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('./layout/footer.ejs') %>
